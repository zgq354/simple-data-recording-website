<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>RequireLoginFilter</filter-name>
        <filter-class>report.filter.RequireLoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/data.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/data_new.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/data_edit.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/data_print.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/data_report.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/template_add.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/template_edit.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/template.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/user.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/user_add.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/user_edit.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/servlet/LogoutServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/servlet/DataAddServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/servlet/TemplateAddServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequireLoginFilter</filter-name>
        <url-pattern>/servlet/UserAddServlet</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>report.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>report.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataAddServlet</servlet-name>
        <servlet-class>report.servlets.DataAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>report.servlets.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TemplateAddServlet</servlet-name>
        <servlet-class>report.servlets.TemplateAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/servlet/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataAddServlet</servlet-name>
        <url-pattern>/servlet/DataAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/servlet/UserAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TemplateAddServlet</servlet-name>
        <url-pattern>/servlet/TemplateAddServlet</url-pattern>
    </servlet-mapping>
</web-app>